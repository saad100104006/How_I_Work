<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlipViewController"><attr format="enum" name="orientation"><enum name="vertical" value="0"/><enum name="horizontal" value="1"/></attr><attr format="enum" name="animationBitmapFormat"><enum name="ARGB_8888" value="0"/><enum name="ARGB_4444" value="1"/><enum name="RGB_565" value="2"/></attr></declare-styleable>
    <string name="app_name">Flip-Library</string>
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Widget.TabWidget" parent="android:Theme">
        <item name="android:tabStripEnabled">true</item>
    </style>
    <style name="tabTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>

    </style>
</resources>